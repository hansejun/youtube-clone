extends ../base 

block content 
  if errorMessage 
    span=errorMessage 
  main.login-main.main
    form(method="POST").loginForm.form
      h2 로그인
      input(type="text",name="username",placeholder="User ID",required)
      input(type="password",name="password",placeholder="Password",required)
      input(type="submit",value="Login").form-submit.login-submit
      div.social-login.social-login__github
        i.fab.fa-github
        a(href="/login/git-start") Continue with Github &rarr;
      div.social-login.social-login__kakao
        i.fas.fa-comment
        a(href="/login/kakao-start") Continue with Kakao Talk &rarr;
      div.social-login.social-login__Naver
        span N
        a(href="/login/naver-start") Continue with Naver &rarr;
    