extends ../base 

block content 
  if (errorMessage)
    span=errorMessage
  main.join-main.main
    form(method="POST").form.join-form
      h2 회원가입
      input(type="text",name="username",placeholder="User ID",required)
      input(type="password",name="password",placeholder="Password",required)
      input(type="password",name="password2",placeholder="Check your Password",required)
      input(type="text",name="name",placeholder="Name",required)
      input(type="email",name="email",placeholder="Email",required)
      input(type="submit",value="Create Account").form-submit