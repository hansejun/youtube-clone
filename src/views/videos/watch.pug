extends ../base 

block content
  div.watch-main
    div.watch-blank
    div.watch
      video(src="/"+video.fileUrl,controls)
      div#watch-controls
        button#play play
        button#mute mute
        input(type="range",step="0.1",value="0.5",min="0",max="1")#volume
        div 
          span#currentTime 00:00
          span /
          span#totalTime 00:00
        div 
          input(type="range",step="1",value="0",min="0")#timeline
        div 
          button#fullScreen Enter Full Screen
      div.watch-data
        span.watch-data__title #{video.title}
        div.watch-data__meta
          div.watch-data__meta-number
            span 조회수 #{video.meta.views}회 • 
            span #{video.createdAt.getFullYear()}. 
            span #{video.createdAt.getMonth()+1}. 
            span #{video.createdAt.getDate()}.
          .watch-data__meta-icons
            a(href="")
              i.far.fa-thumbs-up 
              span 223
            a(href="")
              i.far.fa-thumbs-down
              span 싫어요
            a(href="")
              i.fas.fa-external-link-alt
              span 공유
            a(href="")
              i.fas.fa-download
              span 오프라인 저장
            a(href="")
              i.far.fa-plus-square
              span 저장
            a(href="")
              i.fas.fa-ellipsis-h
      div.watch-owner
        div.watch-owner__info
          if !video.owner.avatarUrl.startsWith("h")
            img(src="/"+`${video.owner.avatarUrl}`).avatarImg
          else
            img(src=video.owner.avatarUrl).avatarImg
          div.watch-owner__info-nickname
            h3 #{video.owner.name}
            span 구독자 0명
          div.watch-owner__info-btn
            span 구독
        div.watch-owner__description
          p #{video.content}
      div.watch-comment
    div.watch-sideBar
  if loggedInUser._id == video.owner._id
    a(href=`/videos/${video._id}/edit`) Edit Video &rarr; 
    br
    a(href=`/videos/${video._id}/delete`) Delete Video &rarr;
block scripts 
  script(src="/assets/js/videoPlayer.js")